{
	"compilerOptions": {
		"strict": true,
		"rootDir": ".",
		"baseUrl": ".",
		"allowJs": true,
		"outDir": "dist",
		"sourceMap": true,
		"target": "ESNext",
		"module": "ESNext",
		"alwaysStrict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"typeRoots": ["./node_modules/@types"],
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.spec.ts", "dist", "node_modules"]
}
